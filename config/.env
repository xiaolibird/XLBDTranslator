# Gemini API 配置
GEMINI_API_KEY=YOURKEYHERE
GEMINI_MODEL=gemini-3-flash-preview

# 文档路径
DOCUMENT_PATH=./test_pdf.pdf
CUSTOM_TOC_PATH=./test_toc.csv


# 输出配置
OUTPUT_DIR=./output
TRANSLATION_MODE=2

# 性能配置
BATCH_SIZE=5
MAX_RETRIES=3
REQUEST_TIMEOUT=30
RATE_LIMIT_DELAY=1.0

# 新增配置项
ENABLE_CACHE=True
CACHE_TTL=3600
MAX_CONTEXT_LENGTH=4000
MIN_CHUNK_SIZE=200
MAX_CHUNK_SIZE=2000
RETAIN_ORIGINAL=False
USE_BREADCRUMB=False
RENDER_PAGE_MARKERS=True

#裁切设置
MARGIN_TOP=0.10
MARGIN_BOTTOM=0.08
MARGIN_LEFT=0.1
MARGIN_RIGHT=0.1

# 日志配置
LOG_LEVEL=WARNING
LOG_FILE=./logs/new_translation.log

# 配置路径
MODES_CONFIG_PATH=config/modes.json